
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div ng-app="UsuariosIngresosWeb" ng-controller="UsuariosController as ctrl">
            <div class="col-md-1">
            </div>
            <div id="bttn-usuarios" class="bd-example bd-example-images container col-md-10">
                <h2 style="text-align:center">Usuarios</h2>
                <div class="col-md-12" style="left:20%">
                    <img data-src="holder.js/200x200" class="rounded float-left" alt="200x200" src="~/Images/Usuario.png" data-holder-rendered="true" style="width: 200px; height: 200px;" ng-click="ctrl.UsuariosNormales()">
                    <img data-src="holder.js/200x200" class="rounded float-right" alt="200x200" src="~/Images/Administrador.png" data-holder-rendered="true" style="width: 200px; height: 200px;" ng-click="ctrl.UsuariosAdministradores()">
                    <img data-src="holder.js/200x200" class="rounded float-left" alt="200x200" src="~/Images/Configuracion.png" data-holder-rendered="true" style="width: 200px; height: 200px;" ng-click="ctrl.Grupo()">
                </div>
            </div>
            <div class="col-md-1">
            </div>
            <div id="form-usuarios" class="form-inline hidden">
                <div class=".col-sm-12" style="margin-left: auto; margin-right: auto;">
                    <div id="precarga" class="show"><input type="image" src="~/Images/loader.gif" /></div>
                </div>
                <div id="divError" class="alert alert-danger hidden" role="alert">
                    {{ctrl.mensaje}}
                </div>
                @*style="overflow-y:scroll; height:400px;"*@
                <div class="content">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="lbusqueda" class="text-success">Busqueda</label>
                            </div>
                            <div class="col-md-9">

                                <input type="text" class="form-control  border border-success" placeholder="Busqueda" ng-model="ctrl.buscar" style="max-width:100%;">
                            </div>

                        </div>
                </div>
                    <div class="table-responsive" style="box-shadow: 10px 40px 96px rgba(0,0,0,.1)">
                        <table class="table table-hover" style="font-size:12px;">

                            <thead class="thead-dark">
                                <tr>
                                    <td>USUARIO</td>
                                    <td>NOMBRE COMPLETO</td>
                                    <td>PASSWORD</td>
                                    <td>TELEFONO</td>
                                    <td>CORREO</td>
                                    <td>ESTATUS</td>
                                    <td><button type="button" class="btn btn-primary" ng-click="ctrl.AgregarUsuario()">Nuevo Usuario</button></td>
                                </tr>
                            </thead>
                            @*<tbody ng-repeat="usu in ctrl.usuarios">*@
                            <tbody ng-pagination="usu in ctrl.usuarios |  itemsPerPage: 10  | filter:ctrl.buscar" pagination-id="PaginationGridRef">
                                <tr>
                                    <td>{{usu.UsuarioIng}}</td>
                                    <td>{{usu.NombreIng}}</td>
                                    <td>{{usu.Contrasenia}}</td>
                                    <td>{{usu.Telefono}}</td>
                                    <td>{{usu.EMail}}</td>
                                    <td>{{usu.Status}}</td>
                                    <td><button type="button" class="btn btn - secondary" ng-click="ctrl.ObtDatos(usu.UsuarioIng)">Editar</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <ng-pagination-control boundary-links="true" pagination-id="PaginationGridRef"></ng-pagination-control>

                    <button type="button" class="btn btn-secondary" ng-click="ctrl.Regresar()">Regresar</button>

                </div>
            </div>
        </div>

        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/global.js"></script>
        <script src="~/Scripts/angular.js"></script>
        <script src="~/Scripts/angular.ng-modules.js"></script>
        <script src="~/Scripts/angular-pagination.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
        <script src="~/Scripts/Models/UsuariosModel.js"></script>
        <script src="~/Scripts/Controllers/UsuariosController.js"></script>

